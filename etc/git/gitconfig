[user]
    useConfigOnly = true
    name = MoonFruit
    email = dkmoonfruit@gmail.com
    signingkey = dkmoonfruit@gmail.com

[color]
    ui = auto

[core]
    excludesfile = ~/.gitignore
    #pager = less -XRF -x5,9
    pager = delta
    quotepath = false
    autocrlf = input

[init]
    defaultBranch = main

[commit]
    gpgsign = true

[fetch]
    prune = true

[pull]
    rebase = true

[push]
    autoSetupRemote = true

[delta]
    dark = true
    navigate = true
    side-by-side = true
    tabs = 4

[interactive]
    diffFilter = delta --color-only

[diff]
    colorMoved = true

[merge]
    conflictstyle = zdiff3

[alias]
    br = branch
    ci = commit
    co = checkout
    di = diff
    dic = diff --cached
    glog = log --graph
    mlog = log --stat --summary
    h = help
    mg = merge
    rb = rebase
    ss = stash
    st = status
    un = restore --staged
    sb = submodule
    sbs = submodule status
    rpo = remote prune origin
    pusha = push --recurse-submodules=on-demand
    pulla = pull --recurse-submodules

[credential]
    helper = osxkeychain

[credential "https://github.com"]
    helper = !gh auth git-credential

[credential "https://gist.github.com"]
    helper = !gh auth git-credential

[includeIf "hasconfig:remote.*.url:git@git.server.gingkoo:*/**"]
    path = .gitconfig-gingkoo
    path = gitconfig-gingkoo

[includeIf "hasconfig:remote.*.url:http://git.server.gingkoo/**"]
    path = .gitconfig-gingkoo
    path = gitconfig-gingkoo

[url "https://github.com/"]
    insteadOf = git@github.com:

[http "https://github.com"]
    proxy = http://127.0.0.1:7890

[url "https://gitlab.com/"]
    insteadOf = git@gitlab.com:

[http "https://gitlab.com"]
    proxy = http://127.0.0.1:7890

[url "https://bitbucket.org/"]
    insteadOf = git@bitbucket.org:

[http "https://bitbucket.org"]
    proxy = http://127.0.0.1:7890

[url "git@git.server.gingkoo:"]
    insteadOf = http://git.server.gingkoo/

[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true

[difftool "vscode"]
    cmd = code --wait --diff "$LOCAL" "$REMOTE"

[mergetool "vscode"]
    cmd = code --wait --merge "$REMOTE" "$LOCAL" "$BASE" "$MERGED"

[difftool "idea"]
    cmd = idea diff "$LOCAL" "$REMOTE"

[mergetool "idea"]
    cmd = idea merge "$LOCAL" "$REMOTE" "$BASE" "$MERGED"
