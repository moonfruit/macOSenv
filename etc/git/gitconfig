[user]
	useConfigOnly = true

[color]
	ui = auto

[core]
	excludesfile = ~/.gitignore
	pager = less -x5,9
	quotepath = false
	autocrlf = input

[alias]
	br = branch
	ci = commit
	co = checkout
	di = diff
	dic = diff --cached
	glog = log --graph
	mlog = log --stat --summary
	h = help
	mg = merge
	rb = rebase
	ss = stash
	st = status
	un = reset HEAD --
	sb = submodule
	sbs = submodule status
	rpo = remote prune origin
	pusha = push --recurse-submodules=on-demand
	pulla = pull --recurse-submodules

[credential]
	helper = osxkeychain

#[url "persistent-https"]
#	insteadof = https

#[url "persistent-http"]
#	insteadof = http

[url "https://github.com/"]
	insteadOf = git://github.com/

[protocol "persistent-https"]
	allow = always

[protocol "persistent-http"]
	allow = always

[difftool "vim"]
	cmd = vimdiff "$LOCAL" "$REMOTE"

[mergetool "idea"]
	cmd = /usr/local/bin/idea merge "$LOCAL" "$REMOTE" "$BASE" "$MERGED"

[difftool "idea"]
	cmd = /usr/local/bin/idea diff "$LOCAL" "$REMOTE"

[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path =

[mergetool "sourcetree"]
	cmd = /Applications/Sourcetree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
