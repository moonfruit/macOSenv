#!/usr/bin/env bash
declare -A images=(
    [bmp]=1
    [gif]=1
    [ico]=1
    [jpg]=1
    [jpeg]=1
    [png]=1
    [webp]=1
)

for arg in "$@"; do
    ext="${arg##*.}"
    ext="${ext,,}"
    if [[ ! ${images[$ext]} ]]; then
        bat=1
        break
    fi
done

if [[ $bat ]]; then
    exec bat -p "$@"
elif hash it2check 2>/dev/null && it2check; then
    exec imgcat "$@"
else
    exec chafa "$@"
fi
