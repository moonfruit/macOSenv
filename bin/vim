#!/usr/bin/env bash
if [[ $LC_TERMINAL == iTerm2 ]]; then
	#VIM=(DIRENV_LOG_FORMAT= proxy direnv exec "$HOME/.local/bin/lvim")
	VIM=(proxy ~/.local/bin/lvim)
else
	VIM=(nvim)
fi

NAME="${0##*/}"
if [[ $NAME == view ]]; then
	VIM+=(-R)
elif [[ $NAME == vimdiff ]]; then
	VIM+=(-d)
elif [[ $NAME == vimex ]]; then
	VIM+=(-e)
fi

exec "${VIM[@]}" "$@"
