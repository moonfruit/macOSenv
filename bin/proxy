#!/usr/bin/env bash

readonly GINGKOO=http://10.1.2.12:8118
readonly DEFAULT=7890  # sing-box
# readonly DEFAULT=10000 # gost: nodes
# readonly DEFAULT=10001 # gost: prefer
# readonly DEFAULT=10002 # gost: us-nodes

if [[ -z $1 || $1 =~ ^(:?[0-9]+|https?:.*|gingkoo|none)$ ]]; then
	case $1 in
	gingkoo) port=$GINGKOO ;;
	none) port=0 ;;
	:*) port=${1:1} ;;
	"") port=$DEFAULT ;;
	*) port=$1 ;;
	esac
	shift
else
	port=$DEFAULT
fi

export PROXY_ENABLED=1

if [[ $port == 0 ]]; then
	exec "$@"

elif [[ $port == 1080 ]]; then
	exec proxychains "$port" "$@"

elif [[ $port =~ https?:.* ]]; then
	export http_proxy="$port"
	export https_proxy="$http_proxy"

elif [[ -d "$ENV" && $port == 9999 ]]; then
	auth=$(git -C "$ENV" secret cat etc/secret/proxy.txt.secret)
	export http_proxy="http://$auth@127.0.0.1:$port"
	export https_proxy="$http_proxy"

else
	export http_proxy="http://127.0.0.1:$port"
	export https_proxy="$http_proxy"
	export all_proxy="socks5://127.0.0.1:$port"

	if [[ $1 == "gu" ]]; then
		extra=(
			--vm.Dhttp.proxyHost=127.0.0.1
			--vm.Dhttp.proxyPort="$port"
			--vm.Dhttps.proxyHost=127.0.0.1
			--vm.Dhttps.proxyPort="$port"
			--vm.Dhttp.nonProxyHosts="localhost|*.gingkoo|127.*|192.168.*|10.*"
		)
		shift
		exec gu "${extra[@]}" "$@"
	fi
fi

#if [[ -z $no_proxy ]]; then
#	# shellcheck source=../etc/no_proxy.sh
#	if [[ -z $ENV ]]; then
#		ENV="${BASH_SOURCE[0]%/*}/.."
#	fi
#	source "$ENV/etc/no_proxy.sh"
#fi

exec "$@"
