#!/usr/bin/env bash

TEMP=/tmp/$(basename "$0").$$.tmp

kilo() {
	N=$1
	if [[ -z $N ]]; then
		N=0
	elif [[ $N == *k ]]; then
		N=${N/%k/}
	else
		N=$((N / 1024))
	fi
	echo $N
}

once() {
	proxy "$1" curl --connect-timeout 5 -m 30 -d 'special=1&tt=1&st=st&nfw=1&s=10MB' https://sf.testmy.net/download 2>&1 >/dev/null | tee "$TEMP"
	TIME=$(tail -1 "$TEMP" | sed 's/.*\r//' | awk '{print $7}')
}

test_one() {
	TOTAL=$2
	if [[ -z "$TOTAL" ]]; then
		TOTAL=1
	fi

	SUM=0
	I=0
	while [[ $I -lt $TOTAL ]]; do
		once "$1"
		if [[ $TIME = 0 ]]; then
			echo "Error: Network blocked"
			return
		fi
		SUM=$((SUM + $(kilo "$TIME")))
		I=$((I + 1))
	done
	
	AVG=$((SUM / I))
	echo "Average Speed: ${AVG} k/s"
}

test_port() {
	if [[ "$1" -le 0 ]]; then
		DISPLAY="DIRECT"
	else
		DISPLAY="$1"
	fi
	echo "-------- $DISPLAY --------"
	test_one "$1"
}

if [[ $# -gt 0 ]]; then
	while [[ $# -gt 0 ]]; do
		test_port "$1"
		shift
	done
	exit
fi

PORT=9900
while [[ $PORT -lt 9915 ]]; do
	test_port $PORT
	PORT=$((PORT + 1))
	echo
done
test_port 1080
echo
test_port 0
