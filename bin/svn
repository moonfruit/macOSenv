#!/bin/bash
if [[ $# -gt 0 ]] && command -v colorsvn &>/dev/null; then
	ARGS=()
	for arg in "$@"; do
		if [[ $arg == "-l" || $arg == "--lang" ]]; then
			NOCOLOR=1
		elif [[ $arg == "-h" || $arg == "--help" ]]; then
			NOCOLOR=1
			ARGS+=("$arg")
		else
			ARGS+=("$arg")
		fi
	done
	if [[ -z $NOCOLOR ]]; then
		export LANG=C
		exec colorsvn "${ARGS[@]}"
	fi
fi
exec "$(brew --prefix)/bin/svn" "$@"
