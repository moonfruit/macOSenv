#!/usr/bin/env bash
readonly URL=http://127.0.0.1:9999/proxies/GLOBAL

OPTS=$(getopt -n "$0" -o ar -l all,raw -- "$@") || exit 1
eval set -- "$OPTS"
while true; do
    case "$1" in
    -a | --all)
        ALL=1
        shift
        ;;
    -r | --raw)
        RAW=1
        shift
        ;;
    --)
        shift
        break
        ;;
    esac
done

if [[ -n $RAW ]]; then
    benchmark-proxies() {
        for PROXY in "$@"; do
            echo "$PROXY"
        done
    }

else
    describe() {
        local index=$1
        local total=$2
        local message=$3
        printf "%0${#total}d/%d: %s" "$index" "$total" "$message"
    }

    benchmark-proxies() {
        local previous
        if (($# > 0)); then
            previous=$(curl -s "$URL" | jq -r '.now')
        fi

        local i=0
        local label proxy
        for proxy in "$@"; do
            ((i++))
            curlie -s PUT "$URL" name="$proxy"
            sleep 0.5
            label=$(describe $i $# "$proxy")
            test-proxy "$label" 7892
        done

        if [[ -n "$previous" ]]; then
            curlie -s PUT "$URL" name="$previous"
        fi
    }
fi

mapfile -t PROXIES < <(curl -s "$URL" | jq -r '.all-["DIRECT","REJECT"]|.[]')
if (($# > 0)); then
    FILTERED=()
    for ARG in "$@"; do
        for PROXY in "${PROXIES[@]}"; do
            if [[ $PROXY == *$ARG* ]]; then
                PROXIES=("${PROXIES[@]/$PROXY/}")
                FILTERED+=("$PROXY")
            fi
        done
    done
    benchmark-proxies "${FILTERED[@]}"

elif [[ -n $ALL ]]; then
    benchmark-proxies "${PROXIES[@]}"

else
    FILTERED=()
    for PROXY in "${PROXIES[@]}"; do
        if [[ $PROXY != *" ("[23456789]"x)" ]]; then
            FILTERED+=("$PROXY")
        fi
    done
    benchmark-proxies "${FILTERED[@]}"
fi
