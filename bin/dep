#!/bin/bash

if [[ -z "$PROXY_ENABLED" ]] && proxy >/dev/null 2>&1; then
	exec proxy "$0" "$@"
fi

if [[ $1 == ensure ]]; then
	VERBOSE=-v
	if /usr/local/bin/dep "$@" $VERBOSE; then
		RESULT=success
	else
		RESULT=failure
	fi
	terminal-notifier -message "\`dep\` end -- $RESULT"

else
	exec /usr/local/bin/dep "$@" $VERBOSE
fi
