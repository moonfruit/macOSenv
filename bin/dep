#!/bin/bash

if [[ -z "$PROXY_ENABLED" ]] && hash proxy >/dev/null 2>&1; then
	exec proxy "$0" "$@"
fi

if [[ $1 == ensure ]]; then
	VERBOSE=-v
	if /opt/homebrew/bin/dep "$@" $VERBOSE; then
		RESULT=success
	else
		RESULT=failure
	fi
	terminal-notifier -message "\`dep\` end -- $RESULT"

else
	exec /opt/homebrew/bin/dep "$@" $VERBOSE
fi
